@model Infoline.WorkOfTimeManagement.BusinessData.VWSH_PagesRole
@{
    ViewBag.Title = "Kayıt Detay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="form-horizontal" data-selector="modalContainer">



    <div class="form-group">
        <div class="col-md-4">
            <label class="control-label label-md" for="Action_Title">Sayfa Linki</label>
        </div>
        <div class="col-md-8">
            @Html.TextBoxFor(model => model.Action_Title, new Dictionary<string, object>() 
            {
                {"class", "form-control"},
                {"maxlength","250"},
                {"minlength","2"},
                {"readonly", "readonly"}
            })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-4">
            <label class="control-label label-md" for="Role_Title">Yetki ismi</label>
        </div>
        <div class="col-md-8">
            @Html.TextBoxFor(model => model.Role_Title, new Dictionary<string, object>() 
            {
                {"class", "form-control"},
                {"maxlength","250"},
                {"minlength","2"},
                {"readonly", "readonly"}
            })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-4">
            <label class="control-label label-md" for="status_Title">Durumu</label>
        </div>
        <div class="col-md-8">
            @Html.TextBoxFor(model => model.status_Title, new Dictionary<string, object>() 
            {
                {"class", "form-control"},
                {"maxlength","250"},
                {"minlength","2"},
                {"readonly", "readonly"}
            })
        </div>
    </div>

    <div class="buttons">
        <button class="btn btn-md btn-danger pull-left" data-task="modalClose">Geri</button>
    </div>

</div>

