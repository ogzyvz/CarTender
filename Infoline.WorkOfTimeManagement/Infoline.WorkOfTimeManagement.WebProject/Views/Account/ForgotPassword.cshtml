@{
    ViewBag.Title = "Şifremi Unuttum";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}


@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new Dictionary<string, object>() {
    { "class", "form-horizontal" },
    { "role", "form" },
    { "data-selector", "modalContainer" },
    { "data-formType", "Ajax" }
}))
{

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="form-group">
        <div class="col-md-3">
            <label class="control-label label-md" for="FRPloginName">Kullanıcı Adı</label>
        </div>
        <div class="col-md-9">
            @Html.TextBox("FRPloginName", String.Empty, new Dictionary<string, object>() {
                    {"class","input-md form-control"},
                    {"placeholder","Kullanıcı Adınızı Giriniz.."}
                }).Validate(Validations.UserName(true))
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-3">
            <label class="control-label label-md" for="FRPemail">Email</label>
        </div>
        <div class="col-md-9">
            @Html.TextBox("FRPemail", String.Empty, new Dictionary<string, object>() {
                    {"class", "input-md form-control"},
                    {"placeholder", "Email Adresiniz ( isim@soyisim.com )"}
                }).Validate(Validations.EMail(true))
        </div>
    </div>


    <div class="clearfix">
        <a href="@Url.Action("SignIn", "Account")" id="SignUp" class="btn btn-danger btn-md">Kullanıcı Girişi</a>
        <button type="submit" class="btn btn-success btn-md pull-right" id="SignIn">Şifremi Gönder</button>
    </div>
}







