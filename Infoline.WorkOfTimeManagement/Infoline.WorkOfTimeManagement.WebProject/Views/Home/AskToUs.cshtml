<section id="SikcaSorulanSorular">
    <div class="container">
        <div class="sec-title"><h2>Sıkça Sorulan Sorular</h2><br /></div>
        <div class="row">
            <div class="col-lg-4 col-md-12 col-sm-12 sidebar-column">
                <div class="faq-sidebar">
                    <h3>Yardım</h3>
                    <div class="online-purchase"></div>
                    <ul class="list-item">
                        @{
                            for (int i = 0; i < Model.categories.Count(); i++)
                            {
                                var id = "n" + (i + 1).ToString();
                                <li id="@id" style="cursor:pointer;padding:5px;border-radius:5px;">@Model.categories[i].name</li>
                            }
                        }
                    </ul>
                </div>
            </div>
            <div class="col-lg-8 col-md-12 col-sm-12 content-column">
                @{
                    for (int i = 0; i < Model.categories.Count(); i++)
                    {
                        var id = "c" + (i + 1).ToString();
                        var display = "";

                        if (i != 0)
                        {
                            display = "display:none".ToString();
                        }

                        <div class="faq-content" id="@id" style="@display">

                            <div class="sec-title"><h2>@Model.categories[i].name</h2></div>
                            <ul class="accordion-box">
                                @{
                                    foreach (var item in Model.faqs)
                                    {
                                        if (item.categoryId_Title == Model.categories[i].name)
                                        {

                                            <li class="accordion block">
                                                <div class="acc-btn">
                                                    <div class="icon-outer"><i class="fas fa-plus"></i></div>
                                                    <h4>@item.name</h4>
                                                </div>
                                                <div class="acc-content">

                                                    <div class="content">
                                                        @{
                                                            if (item.videoUrl != null && item.videoUrl.Contains("embed"))
                                                            {
                                                                <iframe width="100%" height="415" src="@item.videoUrl" loading="lazy"
                                                                        title="YouTube video player"
                                                                        frameborder="0" rel="0" ;
                                                                        allow="accelerometer"
                                                                        autoplay;
                                                                        clipboard-write;
                                                                        encrypted-media;
                                                                        gyroscope;
                                                                        picture-in-picture">
                                                                </iframe>
                                                            }
                                                        }

                                                        <div class="text" style="word-wrap:break-word">
                                                            @item.content
                                                        </div>
                                                    </div>

                                                </div>
                                            </li>

                                        }

                                    }
                                }
                            </ul>
                        </div>

                    }
                }

            </div>
        </div>
    </div>
</section>

