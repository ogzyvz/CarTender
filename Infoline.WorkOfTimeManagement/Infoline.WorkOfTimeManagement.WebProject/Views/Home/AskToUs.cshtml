<section id="SikcaSorulanSorular" class="faq-section">
    <div class="container">
        <div class="sec-title"><h2>Sıkça Sorulan Sorular</h2><br /></div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 content-column">
                @{
                    for (int i = 0; i < Model.categories.Count(); i++)
                    {
                        var id = "c" + (i + 1).ToString();
                        var display = "";

                        if (i != 0)
                        {
                            display = "display:none".ToString();
                        }

                        <div class="faq-content" id="@id" style="@display">

                            <ul class="accordion-box">
                                @{
                                    foreach (var item in Model.faqs)
                                    {
                                        if (item.categoryId_Title == Model.categories[i].name)
                                        {

                                            <li class="accordion block">
                                                <div class="acc-btn">
                                                    <div class="icon-outer"><i class="fas fa-plus"></i></div>
                                                    <h4 style="color: #ff0000 !important">@item.name</h4>
                                                </div>
                                                <div class="acc-content">

                                                    <div class="content">
                                         
                                                        <div class="text" style="word-wrap:break-word">
                                                            @item.content
                                                        </div>
                                                    </div>

                                                </div>
                                            </li>

                                        }

                                    }
                                }
                            </ul>
                        </div>

                    }
                }

            </div>
        </div>
    </div>
</section>

