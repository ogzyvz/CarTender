@model CarTender.BusinessData.VWSH_PagesRole
@{
    ViewBag.Title = "Sayfa Yetkisi Güncelleme";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

@using(Html.BeginForm("Update", "VWSH_PagesRole", FormMethod.Post, new Dictionary<string, object>() {  
    { "class", "form-horizontal" },
    { "role", "form" },
    { "data-selector", "modalContainer" },
    { "data-formType", "Ajax" }
}))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.id)
    @Html.HiddenFor(model => model.actionid)
    @Html.HiddenFor(model => model.roleid)

    
    <div class="form-group">
        <div class="col-md-4">
            <label class="control-label label-md" for="Action_Title">Sayfa Linki</label>
        </div>
        <div class="col-md-8">
            @Html.TextBoxFor(model => model.Action_Title, new Dictionary<string, object>() 
            {
                {"class", "form-control"},
                {"placeholder", "Lütfen Sayfa Linki Giriniz.."},
                {"maxlength","250"},
                {"minlength","2"},
                {"readonly", "readonly"}
            })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-4">
            <label class="control-label label-md" for="Action_Title">Rol</label>
        </div>
        <div class="col-md-8">
            @Html.TextBoxFor(model => model.Role_Title, new Dictionary<string, object>()
            {
                {"class", "form-control"},
                {"maxlength","250"},
                {"minlength","2"},
                {"readonly", "readonly"}
            })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-4">
            <label class="control-label label-md" for="status">Yetki Durumu</label>
        </div>
        <div class="col-md-8 radio">
            <label class="checkbox-inline">@Html.Kendo().RadioButtonFor(model => model.status).Value(true) <span> Aktif</span></label>
            <label class="checkbox-inline">@Html.Kendo().RadioButtonFor(model => model.status).Value(false) <span> Pasif</span></label>
        </div>
    </div>


    <div class="buttons">
        <button class="btn btn-md btn-danger pull-left" data-task="modalClose">Geri</button>
        <button class="btn btn-md btn-success pull-right" type="submit">Kaydet</button>
    </div>

}

