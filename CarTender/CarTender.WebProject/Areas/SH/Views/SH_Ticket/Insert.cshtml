@model CarTender.BusinessData.SH_Ticket
@{
    ViewBag.Title = "Kayıt Ekleme";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

@using(Html.BeginForm("Insert", "SH_Ticket", FormMethod.Post, new Dictionary<string, object>() {  
    { "class", "form-horizontal" },
    { "role", "form" },
    { "data-selector", "modalContainer" },
    { "data-formType", "Ajax" }
}))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.id)


    <div class="form-group">
        <div class="col-md-4">
            <label class="control-label label-md" for="id">id</label>
        </div>
        <div class="col-md-8">
          @(Html.Kendo().DropDownListFor(model => model.id).HtmlAttributes(new Dictionary<string, object>() 
            {
                {"style", "width:100%"},
                {"class", "form-control"},
                {"required", "required"}
            })
            .OptionLabel("Lütfen id yapınız")
            .Filter(FilterType.Contains)
            .DataTextField("Name")
            .DataValueField("Id")
            .DataSource(s =>
            {
                 s.Read(r =>
                 {
                     r.Action("", "General", new { area = string.Empty }); //General controllerının içine datasının oldugu metodu yaz ilk parametreye method ismini ver
                 });
             })
             )
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-4">
            <label class="control-label label-md" for="userid">userid</label>
        </div>
        <div class="col-md-8">
          @(Html.Kendo().DropDownListFor(model => model.userid).HtmlAttributes(new Dictionary<string, object>() 
            {
                {"style", "width:100%"},
                {"class", "form-control"},
                {"required", "required"}
            })
            .OptionLabel("Lütfen userid yapınız")
            .Filter(FilterType.Contains)
            .DataTextField("Name")
            .DataValueField("Id")
            .DataSource(s =>
            {
                 s.Read(r =>
                 {
                     r.Action("", "General", new { area = string.Empty }); //General controllerının içine datasının oldugu metodu yaz ilk parametreye method ismini ver
                 });
             })
             )
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-4">
            <label class="control-label label-md" for="createtime">createtime</label>
        </div>
        <div class="col-md-8">
          @(Html.Kendo().DatePickerFor(model => model.createtime).HtmlAttributes(new Dictionary<string, object>() 
            {
                {"class", "form-control"},
                {"placeholder", "Lütfen createtime Giriniz.."},
                {"required", "required"}
            }).Format("dd.MM.yyyy"))
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-4">
            <label class="control-label label-md" for="endtime">endtime</label>
        </div>
        <div class="col-md-8">
          @(Html.Kendo().DatePickerFor(model => model.endtime).HtmlAttributes(new Dictionary<string, object>() 
            {
                {"class", "form-control"},
                {"placeholder", "Lütfen endtime Giriniz.."},
                {"required", "required"}
            }).Format("dd.MM.yyyy"))
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-4">
            <label class="control-label label-md" for="IP">IP</label>
        </div>
        <div class="col-md-8">
            @Html.TextBoxFor(model => model.IP, new Dictionary<string, object>() 
            {
                {"class", "form-control"},
                {"placeholder", "Lütfen IP Giriniz.."},
                {"maxlength","250"},
                {"minlength","2"},
                {"required", "required"}
            })
        </div>
    </div>


    <div class="buttons">
        <button class="btn btn-md btn-danger pull-left" data-task="modalClose">Geri</button>
        <button class="btn btn-md btn-success pull-right" type="submit">Kaydet</button>
    </div>

}

